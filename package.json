{
  "name": "rotas-julinho",
  "version": "0.0.1",
  "description": "Starter project",
  "main": "index.js",
  "scripts": {
    "prelint": "prettier --single-quote --no-semi --no-bracket-spacing --trailing-comma none --write \"server/**/*.js\" --write \"seeders/**/*.js\" --write \"migartions/**/*.js\"",
    "lint": "xo --fix",
    "test:unit:watch": "ava test/unit/**/*.js -w --color",
    "precommit": "lint-staged",
    "start": "node index.js",
    "build:docs": "aglio -i api.apib -o docs/index.html",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julinho-ifsc/rotas.git"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/julinho-ifsc/rotas/issues"
  },
  "homepage": "https://github.com/julinho-ifsc/rotas#readme",
  "devDependencies": {
    "aglio": "^2.3.0",
    "ava": "^0.22.0",
    "husky": "^0.14.3",
    "is-jwt": "^1.0.0",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "supertest": "^3.0.0",
    "xo": "^0.18.2"
  },
  "jest": {
    "automock": false,
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "strict": 2,
      "camelcase": 0
    },
    "space": true,
    "semicolon": false
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.0",
    "compression": "^1.7.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "helmet": "^3.8.1",
    "jsonschema": "^1.2.0",
    "jsonwebtoken": "^8.0.0",
    "knex": "^0.13.0",
    "morgan": "^1.8.2",
    "mysql": "^2.14.1"
  }
}
