{
  "name": "express-boilerplate",
  "version": "0.0.1",
  "description": "Starter project",
  "main": "index.js",
  "scripts": {
    "prelint": "prettier --single-quote --no-semi --no-bracket-spacing --trailing-comma none --write \"server/**/*.js\"",
    "lint": "xo --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "sequelize": "sequelize --config server/config/config.json --migrations-path server/migrations --models-path server/models --seeders-path server/seeders",
    "migration:create": "npm run sequelize -- migration:create",
    "migrate": "npm run sequelize -- db:migrate",
    "model:create": "npm run sequelize -- model:create",
    "seed": "npm run sequelize -- db:seed:all",
    "precommit": "lint-staged && npm test",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/express-boilerplate.git"
  },
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/express-boilerplate/issues"
  },
  "homepage": "https://github.com/thiamsantos/express-boilerplate#readme",
  "devDependencies": {
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.5.3",
    "sequelize-cli": "^2.7.0",
    "supertest": "^3.0.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "cpf_cnpj": "^0.2.0",
    "express": "^4.15.3",
    "isemail": "^3.0.0",
    "mysql2": "^1.3.6",
    "owasp-password-strength-test": "^1.3.0",
    "secure-password": "^2.1.1",
    "sequelize": "^4.4.2"
  },
  "jest": {
    "automock": false,
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "xo": {
    "envs": [
      "node",
      "jest"
    ],
    "rules": {
      "strict": 2
    },
    "space": true,
    "semicolon": false
  }
}
